.clients__title, .clients__divider {
    vertical-align(middle);
    margin-bottom: 51px;
}

.clients__title {
    color:  #7f8c8c;
    font-size: 16px;
    open-sans(extrabold);
    margin-top: 0;
    margin-left: 1px;
}
.clients__divider {
    width: 7px;
    height: 7px;
    border-radius: 4px;
    background-color:  #e1e2e2;
    position: relative;
    margin-left: 13px;

    &:after {
        background:  #e1e2e2;
        width: 880px;
        height: 1px;
        content: '';
        display: block;
        position: absolute;
        top: 50%;
        margin-top: -1px;
        left: 100%;
    }
}