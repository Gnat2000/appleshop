open-sans(style = regular) {
    font-family: 'Open Sans';

    if style == semibolditalic {
        font-weight: 600;
        font-style: italic;
    }

    if style == regular {
        font-weight: 400;
    }

    if style == semibold {
        font-weight: 600;
    }

    if style == bold {
        font-weight: 700;
    }

    if style == extrabold {
        font-weight: 800;
    }

    if style == italic {
        font-weight: 400;
        font-style: italic;
    }
}