extends ../layouts/main_layouts

block title
    | Main Page

block content
    section.slider
        ul.slider__list
            each title in ['star_wars1.jpg', 'star_wars2.jpg', 'star_wars3.jpg', 'star_wars4.jpg']
                li.slider__item
                    img(src='img/big_slider/' + title, alt='Starwars').slider__img
    section.breadcrumbs
        .container
            .top-services
                h2.top-services__title Some of our top services
                .top-services__text
                    p Ut eleifend libero sed neque rhoncus consequat. Maecenas tincidunt, augue et rutrum condimentum, libero lectus mattis orci, ut commodo.
            .button
                a(href="#").button__link View More
    section.read-more
        .container
            ul.read-more__list
                -var blocks = [{icon: 'fa-thumbs-o-up', title: 'suspendisse', text: 'Quisque id tellus quis risus vehicula vehicula ut turpis. In eros nulla, placerat vitae at, vehicula ut nunc.'},{icon: 'fa-key', title: 'maecenas', text:'Ut eleifend libero sed neque rhoncus consequat. Maecenas tincidunt, augue et rutrum condimentum, libero lectus mattis orci, ut commodo.'}, {icon: 'fa-flag', title: 'aliquam', text: 'Vivamus eget ante bibendum arcu vehicula ultricies. Integer venenatis mattis nisl, vitae pulvinar dui tempor non.'}, {icon: 'fa-flask', title: 'habitasse', text: 'Astehicula ultricies. Integer venenatis mattis nisl, vitae pulvinar dui tempor non.'}]
                for block in blocks
                    li.read-more__item
                        i(class='read-more__icon fa ' + block.icon)
                        .read-more__title= block.title
                        .read-more__text= block.text
                        .read-more__button
                            a(href="#").read-more__button-link read more
    section.modus-versus
        .container
            h1.modus-versus__title Why Modus Versus?
            .modus-versus__text Capacitance cascading integer reflective interface data development high bus cache dithering transponder.
            .modus-versus__image_left
                ul.dot__list
                    li.dot__item
                    li.dot__item
                    li.dot__item
                .image
                    img(src='img/star_wars_left.jpg', alt='Left Image').image__pic
            .modus-versus__image_center
                .topbar
                    ul.topbar__list
                        li.dot__item
                        li.dot__item
                        li.dot__item
                    .topbar__oval
                        .oval
                .image-center
                    img(src='img/star_wars_top.jpg', alt='Center Image').image-center_pic
            .modus-versus__image_right
                .right__image-right-oval
                    .oval
                .image
                    img(src='img/star_wars_right.jpg', alt='Right Image').image__pic
    section.questions
        .container
            .why-choose
                h4.why-choose__title Why Choose Us ?
                ul.why-choose__list
                    each text in ['Quisque at massa ipsum', 'Maecenas a lorem augue, egestas', 'Cras vitae felis at lacus eleifend', 'Etiam auctor diam pellentesque', 'Nulla ac massa at dolor', 'Condimentum eleifend vitae vitae']
                        li.why-choose__menu
                            .why-choose__text= text
            .ratings
                .ratings__text
                    p Curabitur quis nisl in leo euismod venenatis eu in diam. Etiam auctor diam pellentesque lectus
                        a(href="#").ratings__link
                            span vehicula mattis
                        |. Nulla ac massa at dolor condimentum eleifend vitae vitae urna.
                ul.ratings__arc
                    - var index=0
                    each values, key in {'suspendisse': '50', 'maecenas': '70', 'aliquam': '80', 'habitasse': '100'}
                        li.ratings__arc-item
                            div(class='ratings__arc-circular ratings__arc-circular_'+ index++)
                            .ratings__arc-number= values
                            .ratings__arc-title= key
            .quote
                h4.quote__title What Clientâ€™s Say ?
                .quote__text
                    p Curabitur quis nisl in leo euismod venenatis eu in diam. Etiam auctor diam pellentesque lectus vehicula mattis.
                        span Nulla ac massa at dolor condimentum
                .quote__name Jhon Doe
    section.clients
        .container
            .clients__title Our Happy Clients
            .clients__divider
            ul.clients__slider
                each title in ['star_wars_1.jpg', 'star_wars_2.jpg', 'star_wars_3.jpg','star_wars_4.jpg', 'star_wars_5.jpg', 'star_wars_6.jpg', 'star_wars_7.jpg', 'star_wars_8.jpg', 'star_wars_9.jpg']
                    li.clients__slider-item
                        img(src='img/small_slider/' + title, alt='Starwars').clients__slider-pic
